<h3>Report lists</h3>



{{#each data}}
    <div class="card" onclick="bringForm({{@key}})">
        
    
        <div class="container1">
            <h4><span style="float: left;">ward</span>
                <span style="float: right;">user</span>
            </h4>

        <p>-- {{ this.report.description }} </p>
        </div>
        <div id={{@key}} style="display: none;">
            <form id="form" method="POST" action="#">
                <label for="report">Report Response:</label><br><br>
                <textarea name="report" id="report" placeholder="write your report response here..."></textarea>
                <br>
                <button id="submit" type="submit">Submit</button>
            </form>
        </div>



    </div>

{{/each}}



<script>
    function myFunction() {
        document.getElementById("myDropdown").classList.toggle("show");
    }
    function bringForm(id) {
        console.log(id);
        p=document.getElementById(id).style.display;
        document.getElementById(id).style.display =(p=="block")?"None":"block";
    }

    function filterFunction() {
        var input, filter, ul, li, a, i;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        div = document.getElementById("myDropdown");
        a = div.getElementsByTagName("a");
        for (i = 0; i < a.length; i++) {
            txtValue = a[i].textContent || a[i].innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                a[i].style.display = "";
            } else {
                a[i].style.display = "none";
            }
        }
    }
</script>